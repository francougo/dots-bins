#!/bin/bash

option=$(echo -e "Suspend\nShutdown\nReboot" |rofi -dmenu)

case $(echo $option|awk '{print $2}') in
        "Suspend") 
                loginctl suspend
                ;;
        "Shutdown") 
                loginctl poweroff
                ;;
        "Reboot") 
                loginctl reboot
                ;;
        *) 
                ;;
esac
