(defwidget barra_w []
  (centerbox :orientation "h"
    (box :class "izq_barra"
      :halign "start"
      (izq_w))
    (box :class "mid_barra"
      :halign "middle"
      (mid_w))
    (box :class "der_barra"
      :halign "end"
      (der_w))))

(defwidget izq_w []
  (centerbox :orientation "h"
      (box :class "izq_barra"
        (clock_w))
      (box :class "izq_barra"
        (vol_w))
      (box :class "izq_barra"
        (bat_w))))

(defwidget mid_w []
  (box :class "desk"
    (workspaces)))

(defwidget der_w []
  (box :orientation "h"
    :space-evenly false
    (bt_w)(wifi_w)(titl_w)))

(defwidget wifi_w []
  (box :class {wifi_state == 1 ? "wifi1" : "wifi0"}
    "${wifi_stgt} dBm "))

(defwidget bt_w []
